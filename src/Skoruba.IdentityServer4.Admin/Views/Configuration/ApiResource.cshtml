@using Microsoft.AspNetCore.Mvc.Localization
@using Newtonsoft.Json
@using Skoruba.IdentityServer4.Admin.ViewModels.Configuration
@model Skoruba.IdentityServer4.Admin.ViewModels.Configuration.ApiResourceDto
@inject IViewLocalizer Localizer

@{
	ViewBag.Title = Localizer["PageTitle"];
	Layout = "_Layout";
}

<h2>@Localizer["PageTitle"]</h2>

<form asp-action="ApiResource" method="post" id="api-resource-form" class="form-horizontal">

	<div asp-validation-summary="All" class="text-danger"></div>

	<!--Hidden -->
	<input type="hidden" asp-for="Id" />

	<div class="panel panel-default">
		<div class="panel-heading">@Localizer["PanelTitle"]</div>
		<div class="panel-body">

			<!--Input - text -->
			<div class="form-group">
				<label asp-for="Name" class="col-sm-3 control-label">
					@Html.Partial("ApiResource/Section/Label", "Name")
				</label>
				<div class="col-sm-9">
					<input type="text" required class="form-control" asp-for="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<!--Input - text -->
			<div class="form-group">
				<label asp-for="DisplayName" class="col-sm-3 control-label">
					@Html.Partial("ApiResource/Section/Label", "DisplayName")
				</label>
				<div class="col-sm-9">
					<input type="text" class="form-control" asp-for="DisplayName">
				</div>
			</div>

			<!--Input - text -->
			<div class="form-group">
				<label asp-for="Description" class="col-sm-3 control-label">
					@Html.Partial("ApiResource/Section/Label", "Description")
				</label>
				<div class="col-sm-9">
					<input type="text" class="form-control" asp-for="Description">
				</div>
			</div>

			<!--Checkbox-->
			<div class="form-group">
				<label asp-for="Enabled" class="col-sm-3 control-label">
					@Html.Partial("IdentityResource/Section/Label", "Enabled")
				</label>
				<div class="col-sm-9">
					<toggle-button>
						<input asp-for="Enabled" type="checkbox">
					</toggle-button>
				</div>
			</div>

			@if (Model.Id != 0)
			{
				<!--Button-->
				<div class="form-group">
					<label class="col-sm-3 control-label">
						@Html.Partial("ApiResource/Section/Label", "Scopes")
					</label>
					<div class="col-sm-9">
						<a asp-action="ApiScopes" asp-route-id="@Model.Id" class="btn btn-info"><span class="glyphicon glyphicon glyphicon-eye-open" aria-hidden="true"></span> @Localizer["ButtonManageScopes"]</a>
					</div>
				</div>
				<!--Button-->
				<div class="form-group">
					<label class="col-sm-3 control-label">
						@Html.Partial("ApiResource/Section/Label", "Secrets")
					</label>
					<div class="col-sm-9">
						<a asp-action="ApiSecrets" asp-route-id="@Model.Id" class="btn btn-info"><span class="glyphicon glyphicon glyphicon-lock" aria-hidden="true"></span> @Localizer["ButtonManageSecrets"]</a>
					</div>
				</div>
			}

			<!--Select with tags-->
			<div class="form-group">
				<label asp-for="UserClaims" class="col-sm-3 control-label">
					@Html.Partial("ApiResource/Section/Label", "UserClaims")
				</label>
				<div class="col-sm-9">
					<picker id="UserClaimsItems" multiple-select="true" min-search-text="2"
					        selected-items="@Model.UserClaims" url="/Configuration/SearchClaims?claim"
					        search-input-placeholder="Enter 2 and more characters" selected-items-title="Selected: ">
					</picker>
				</div>
			</div>

			<!--Button-->
			<div class="form-group">
				<label class="col-sm-3 control-label">
				</label>
				<div class="col-sm-9">
					<button type="submit" id="api-resource-save-button" class="btn btn-success">@Localizer["ButtonSaveApiResource"]</button>
					@if (Model.Id != 0)
					{
						<a class="btn btn-danger" asp-action="ApiResourceDelete" asp-route-id="@Model.Id">@Localizer["ButtonDeleteApiResource"]</a>
					}
				</div>
			</div>
		</div>
	</div>

</form>

@section scripts
	{
	<script>
		$(function () {
			//Disable enter for this form
			FormMvc.disableEnter($('#api-resource-form'));			
		});
	</script>
}