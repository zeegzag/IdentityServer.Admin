@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.IdentityServer4.Admin.ViewModels.Identity
@model Skoruba.IdentityServer4.Admin.ViewModels.Identity.RoleDto
@inject IViewLocalizer Localizer

@{
	ViewBag.Title = Localizer["PageTitle"];
	Layout = "_Layout";
}	

<h2>@Localizer["PageTitle"]</h2>

<form id="client-form" class="form-horizontal" asp-controller="Identity" asp-action="RoleDelete" Method="post">	
	
	<!--Hidden -->
	<input type="hidden" asp-for="Id" />

	<!--Input - text -->
	<div class="form-group">
		<label asp-for="Name" class="col-sm-3 control-label">
			@Html.Partial("User/Section/Label", "RoleName")
		</label>
		<div class="col-sm-9">
			<input type="text" class="form-control" disabled="disabled" asp-for="Name">
		</div>
	</div>

	<!--Button-->
	<div class="form-group">
		<label class="col-sm-3 control-label">
		</label>
		<div class="col-sm-9">
			<button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon glyphicon-user" aria-hidden="true"></span> @Localizer["ButtonDeleteRole"]</button>
		</div>
	</div>		
</form>