@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.IdentityServer4.Admin.ViewModels.Identity
@model Skoruba.IdentityServer4.Admin.ViewModels.Identity.UserChangePasswordDto
@inject IViewLocalizer Localizer

@{
	ViewBag.Title = Localizer["PageTitle"];
	Layout = "_Layout";
}

<form class="form-horizontal" asp-controller="Identity" asp-action="UserChangePassword" Method="post">
	<div class="row">
		<div class="col-md-12">
			<h3>@Localizer["PageTitle"]</h3>
			
			<a asp-action="User" asp-route-id="@Model.UserId" class="btn btn-info col-m-b-15">@Localizer["ButtonBackUser"]</a>

			<div asp-validation-summary="All" class="text-danger"></div>

			<!--Hidden -->
			<input type="hidden" asp-for="UserId" />

			<div class="panel panel-default">
				<div class="panel-heading">@Localizer["PanelTitle"]</div>
				<div class="panel-body">

					<!--Input - text -->
					<div class="form-group">
						<label asp-for="UserName" class="col-sm-3 control-label">
							@Html.Partial("User/Section/Label", "UserChangePasswordUserName")
						</label>
						<div class="col-sm-9">
							<input type="hidden" class="form-control" asp-for="UserName">
							<h4>@Model.UserName</h4>
						</div>
					</div>

					<!--Input - text -->
					<div class="form-group">
						<label asp-for="Password" class="col-sm-3 control-label">
							@Html.Partial("User/Section/Label", "UserChangePasswordPassword")
						</label>
						<div class="col-sm-9">
							<input type="password" required class="form-control" asp-for="Password">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
					</div>

					<!--Input - text -->
					<div class="form-group">
						<label asp-for="ConfirmPassword" class="col-sm-3 control-label">
							@Html.Partial("User/Section/Label", "UserChangePasswordConfirmPassword")
						</label>
						<div class="col-sm-9">
							<input type="password" required class="form-control" asp-for="ConfirmPassword">
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
					</div>

					<!--Button-->
					<div class="form-group">
						<label class="col-sm-3 control-label">
						</label>
						<div class="col-sm-9">
							<button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> @Localizer["ButtonChangePassword"]</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>