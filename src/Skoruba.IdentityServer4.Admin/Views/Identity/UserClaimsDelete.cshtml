@using Microsoft.AspNetCore.Mvc.Localization
@using Skoruba.IdentityServer4.Admin.ViewModels.Identity
@model Skoruba.IdentityServer4.Admin.ViewModels.Identity.UserClaimsDto
@inject IViewLocalizer Localizer

@{
	ViewBag.Title = Localizer["PageTitle"];
	Layout = "_Layout";
}

<form class="form-horizontal" asp-controller="Identity" asp-action="UserClaimsDelete" Method="post">
	<div class="row">
		<div class="col-md-12">
			<h3>@Localizer["PageTitle"]</h3>

			<a asp-action="User" asp-route-id="@Model.UserId" class="btn btn-info col-m-b-15">@Localizer["ButtonBackUser"]</a>

			<!--Hidden -->
			<input type="hidden" asp-for="UserId" />
			
			<!--Hidden -->
			<input type="hidden" asp-for="ClaimId" />

			<div class="panel panel-default">
				<div class="panel-heading">@Localizer["PanelTitle"]</div>
				<div class="panel-body">

					<!--Input - text -->
					<div class="form-group">
						<label asp-for="ClaimType" class="col-sm-3 control-label">
							@Html.Partial("User/Section/Label", "Type")
						</label>
						<div class="col-sm-9">
							<input type="text" disabled="disabled" class="form-control" asp-for="ClaimType">
						</div>
					</div>

					<!--Input - text -->
					<div class="form-group">
						<label asp-for="ClaimValue" class="col-sm-3 control-label">
							@Html.Partial("User/Section/Label", "Value")
						</label>
						<div class="col-sm-9">
							<input type="text" disabled="disabled" class="form-control" asp-for="ClaimValue">
						</div>
					</div>

					<!--Button-->
					<div class="form-group">
						<label class="col-sm-3 control-label">
						</label>
						<div class="col-sm-9">
							<button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon glyphicon-trash" aria-hidden="true"></span> @Localizer["ButtonDeleteUserClaim"]</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>